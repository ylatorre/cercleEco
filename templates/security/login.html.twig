
{% extends 'base.html.twig' %}

{% block title %}Greenify - Connexion{% endblock %}

{% block body %}

<div class="min-h-screen bg-[#F5F5F1] flex flex-col justify-center items-center px-4">
    <div class="w-full max-w-md">
        {# Logo #}
        <div class="w-32 h-12 bg-[#3B4419] mb-6 flex items-center justify-center mx-auto">
            <span class="text-white text-xl font-serif">Greenify</span>
        </div>

        <h1 class="text-2xl font-medium mb-8 text-center">Bienvenue</h1>

        {% if error %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4" role="alert">
                <span class="block sm:inline">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
            </div>
        {% endif %}

        {% if app.user %}
            <div class="mb-4 text-center">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-[#3B4419] hover:underline">Déconnexion</a>
            </div>
        {% endif %}

        <form method="post" class="space-y-4">
            <div>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full bg-transparent border border-gray-300 rounded-lg h-12 px-4 focus:outline-none focus:ring-2 focus:ring-[#3B4419]" autocomplete="email" required autofocus placeholder="Adresse mail">
            </div>

            <div class="space-y-1">
                <input type="password" name="password" id="inputPassword" class="w-full bg-transparent border border-gray-300 rounded-lg h-12 px-4 focus:outline-none focus:ring-2 focus:ring-[#3B4419]" autocomplete="current-password" required placeholder="Mot de passe">
                <div class="text-right">
                    {# <a href="{{ path('app_forgot_password_request') }}" class="text-sm text-gray-600 hover:underline"> #}
                        Mot de passe oublié
                    </a>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex items-center">
                <input type="checkbox" name="_remember_me" id="remember_me" class="h-4 w-4 text-[#3B4419] focus:ring-[#3B4419] border-gray-300 rounded">
                <label for="remember_me" class="ml-2 block text-sm text-gray-600">Se souvenir de moi</label>
            </div>

            <div>
                <button type="submit" class="w-full bg-[#3B4419] hover:bg-[#2A3112] text-white h-12 rounded-lg mt-6 font-medium transition-colors duration-200">Se connecter</button>
            </div>
        </form>

        <div class="mt-6 text-sm text-center">
            Pas de compte ?
            <a href="{{ path('app_register') }}" class="text-[#3B4419] hover:underline">
                Inscrivez-vous
            </a>
        </div>
    </div>
</div>
{% endblock %}
