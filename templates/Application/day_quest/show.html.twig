{% extends 'base.html.twig' %}

{% block title %}Show DayQuest{% endblock %}

{% block body %}
<div class="flex min-h-screen bg-[#B8BC86]">
    {# Sidebar #}
    <aside class="w-64 bg-[#3B4419] text-white p-6">
        <div class="mb-12">
            <img src="{{ asset('image/logo.png') }}" alt="Greenify Logo" class="inline-block" style="height: 8rem;">
        </div>
        <nav class="space-y-4">
            <a href="{{ path('app_application_quetes_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">
                Gestion des Quêtes
            </a>
            <a href="{{ path('app_application_day_quest_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">
                Gestion des Quêtes journalières
            </a>
            <a href="{{ path('app_application_dons_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">
                Gestion des Dons
            </a>
            <a href="{{ path('app_application_user_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">
                Gestion des Utilisateurs
            </a>
        </nav>
    </aside>

    {# Main Content #}
    <main class="flex-1 p-8">

        <div class="mb-8">
            <h1 class="text-4xl font-serif text-[#3B4419] mb-8">Quete journalière</h1>

            <div class="bg-[#3B4419] rounded-2xl overflow-hidden p-8">
                <div class="flex justify-between mb-4">
                    <a href="{{ path('app_application_day_quest_index') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Retour</a>
                    <a href="{{ path('app_application_day_quest_edit', {'id': day_quest.id}) }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700]">Modifier</a> 
                </div>

                <div>
                    <label for="titre" class="block text-sm font-medium text-white">Titre</label>
                    <input type="text" id="titre" name="titre" value="{{ day_quest.titre }}" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    {% if errors.titre is defined and errors.titre|length > 0 %}
                        <p class="text-red-500 text-sm">{{ errors.titre|join(', ') }}</p>
                    {% endif %}
                </div>

                <div>
                    <label for="description" class="block text-sm font-medium text-white">Description</label>
                    <textarea id="description" name="description" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">{{ day_quest.description }}</textarea>
                    {% if errors.description is defined and errors.description|length > 0 %}
                        <p class="text-red-500 text-sm">{{ errors.description|join(', ') }}</p>
                    {% endif %}
                </div>

                <div>
                    <label for="xp" class="block text-sm font-medium text-white">XP</label>
                    <input type="number" id="xp" name="xp" value="{{ day_quest.xp }}" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    {% if errors.xp is defined and errors.xp|length > 0 %}
                        <p class="text-red-500 text-sm">{{ errors.xp|join(', ') }}</p>
                    {% endif %}
                </div>
                <div class="mt-4">
                    {{ include('Application/day_quest/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
