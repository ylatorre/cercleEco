{% extends 'base.html.twig' %}

{% block title %}Quest{% endblock %}

{% block body %}
    <h1>Quest</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quest.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ quest.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ quest.description }}</td>
            </tr>
            <tr>
                <th>DateDeCreation</th>
                <td>{{ quest.DateDeCreation ? quest.DateDeCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ quest.niveau }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_application_quest_index') }}">back to list</a>

    <a href="{{ path('app_application_quest_edit', {'id': quest.id}) }}">edit</a>

    {{ include('application/quest/_delete_form.html.twig') }}
{% endblock %}
