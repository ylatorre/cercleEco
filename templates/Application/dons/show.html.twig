{% extends 'base.html.twig' %}

{% block title %}Dons{% endblock %}

{% block body %}
<div class="flex min-h-screen bg-[#B8BC86]">
    {# Sidebar #}
    <aside class="w-64 bg-[#3B4419] text-white p-6">
        <img src="{{ asset('image/logo.png') }}" alt="Greenify Logo" class="inline-block" style="height: 8rem;">
        <div class="w-12 h-12 mb-8">
            <!-- Replace with logo if needed -->
            {# <svg viewBox="0 0 24 24" fill="currentColor" class="text-green-400">
                <path d="M12 2L4.5 9.5C3 11 2 13 2 15c0 3.9 3.1 7 7 7 2 0 4-1 5-2.5C15 21 17 22 19 22c3.9 0 7-3.1 7-7 0-2-1-4-2.5-5.5L12 2z"/>
            </svg> #}
        </div>
        <nav class="space-y-4">
            <a href="{{ path('app_application_quetes_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">Gestion des QuÃªtes</a>
            <a href="{{ path('app_application_dons_index') }}" class="block py-2 px-4 rounded bg-[#4B5429] transition-colors">Gestion des Dons</a>
            <a href="{{ path('app_application_user_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">Gestion des Utilisateurs</a>
        </nav>
    </aside>

    {# Main Content #}
    <main class="flex-1 p-8">
        <div class="mb-8">
            <h1 class="text-4xl font-serif text-[#3B4419] mb-8">Dons</h1>

            <div class="bg-[#3B4419] rounded-2xl overflow-hidden p-8">
                <div class="flex justify-between">
                    <a href="{{ path('app_application_dons_index') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Retour</a> 
                    <a href="{{ path('app_application_dons_edit', {'token': don.token}) }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Modifier</a>
                </div>
                <table class="table-auto w-full mb-6">
                    <tbody>
                        <tr class="border-b border-[#4B5429]">
                            <th class="px-4 py-2 text-left text-white">Id</th>
                            <td class="px-4 py-2 text-white">{{ don.id }}</td>
                        </tr>
                        <tr class="border-b border-[#4B5429]">
                            <th class="px-4 py-2 text-left text-white">Titre</th>
                            <td class="px-4 py-2 text-white">{{ don.titre|length > 30 ? don.titre|slice(0, 30) ~ '...' : don.titre }}</td>
                        </tr>
                        <tr class="border-b border-[#4B5429]">
                            <th class="px-4 py-2 text-left text-white">Description</th>
                            <td class="px-4 py-2 text-white">{{ don.description|length > 30 ? don.description|slice(0, 30) ~ '...' : don.description }}</td>
                        </tr>
                        <tr class="border-b border-[#4B5429]">
                            <th class="px-4 py-2 text-left text-white">Image</th>
                            <td class="px-4 py-2">
                                {% if don.image %}
                                    <img src="{{ asset('images/dons/' ~ don.image) }}" alt="{{ don.titre }}" class="w-32 h-32 object-cover rounded-lg">
                                {% else %}
                                    <span class="text-gray-500">No image</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="border-b border-[#4B5429]">
                            <th class="px-4 py-2 text-left text-white">Localisation</th>
                            <td class="px-4 py-2 text-white">{{ don.localisation }}</td>
                        </tr>
                        <tr class="border-b border-[#4B5429]">
                            <th class="px-4 py-2 text-left text-white">CreatedAt</th>
                            <td class="px-4 py-2 text-white">{{ don.createdAt ? don.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="mt-4">
                    {{ include('Application/dons/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
