{% extends 'base.html.twig' %}

{% block title %}Dons{% endblock %}

{% block body %}
    <h1>Dons</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ don.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ don.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ don.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ don.image }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ don.localisation }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ don.categorie }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ don.createdAt ? don.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_application_dons_index') }}">back to list</a>

    <a href="{{ path('app_application_dons_edit', {'id': don.id}) }}">edit</a>

    {{ include('Application/dons/_delete_form.html.twig') }}
{% endblock %}
