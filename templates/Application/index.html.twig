{% extends 'base.html.twig' %}

{% block title %}Administration Dashboard{% endblock %}

{% block body %}
<div class="flex min-h-screen bg-[#B8BC86]">
            {# {/* Sidebar */} #}
    <aside class="w-64 bg-[#3B4419] text-white p-6">
        {# {/* Logo */} #}
        <div class="mb-12">
            <h1 class="text-2xl font-serif mb-4">Greenify</h1>
            <div class="w-12 h-12">
                {# <svg viewBox="0 0 24 24" fill="currentColor" class="text-green-400">
                    <path d="M12 2L4.5 9.5C3 11 2 13 2 15c0 3.9 3.1 7 7 7 2 0 4-1 5-2.5C15 21 17 22 19 22c3.9 0 7-3.1 7-7 0-2-1-4-2.5-5.5L12 2z"/>
                </svg> #}
            </div>
        </div>

        {# {/* Navigation */} #}
        <nav class="space-y-4">
            <a href="{{ path('app_application_quetes_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">
                Gestion des Quêtes
            </a>
            <a href="{{ path('app_application_day_quest_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">
                Gestion des Quêtes journalière
            </a>
            <a href="{{ path('app_application_dons_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">
                Gestion des Dons
            </a>
            <a href="{{ path('app_application_user_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">
                Gestion des Utilisateurs
            </a>
        </nav>
    </aside>

    {# {/* Main Content */} #}
    <main class="flex-1 p-8">
        {# {/* Admin Header */} #}
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-xl text-[#3B4419]">Admin {{ app.user.prenom }}</h2>
        </div>

        {# {/* Quests Section */} #}
        <div class="mb-8">
            <h1 class="text-4xl font-serif text-[#3B4419] mb-8">Quêtes</h1>

            {# {/* Quests Table */} #}
            <div class="bg-[#3B4419] rounded-2xl overflow-hidden">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-[#4B5429]">
                            <th class="py-4 px-6 text-white text-left">Quêtes</th>
                            <th class="py-4 px-6 text-white text-left">Gestion</th>
                        </tr>
                    </thead>
                    <tbody>
                        {# {% for quete in quest %} #}
                            <tr class="border-b border-[#4B5429]">
                                {# <td class="py-4 px-6 text-white">{{ quests.titre }}</td> #}
                                <td class="py-4 px-6">
                                    <div class="flex space-x-4">
                                        {# <a href="{{ path('app_application_quests_edit', {'id': quest.id}) }}" class="text-white hover:text-gray-300 transition-colors"> #}
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                            </svg>
                                        </a>
                                        {# <form method="post" action="{{ path('app_application_quests_delete', {'id': quest.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');"> #}
                                            {# <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quest.id) }}" /> #}
                                            <button type="submit" class="text-white hover:text-gray-300 transition-colors">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {# {% endfor %} #}
                    </tbody>
                </table>
            </div>
        </div>

        {# {/* Bottom Navigation */} #}
        <div class="flex justify-between items-center">
            <button class="bg-[#3B4419] text-white p-3 rounded-full">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </button>

            <div class="flex items-center space-x-4">
                <button class="text-[#3B4419]">&lt;</button>
                <span class="text-[#3B4419]">1/12</span>
                <button class="text-[#3B4419]">&gt;</button>
            </div>

            <a href="{{ path('app_application_quetes_index') }}" class="bg-[#3B4419] text-white p-3 rounded-full">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M12 4v16m8-8H4" />
                </svg>
            </a>
        </div>
    </main>
</div>
{% endblock %}