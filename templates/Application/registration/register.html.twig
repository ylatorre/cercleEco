{% extends 'base.html.twig' %}

{% block title %}Greenify - Inscription{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#F5F5F1] flex flex-col justify-center items-center px-4">
    {# Status Bar #}


    <div class="w-full max-w-md">
        {# Logo #}
        <div class="w-32 h-12 bg-[#3B4419] mb-6 flex items-center justify-center mx-auto">
            <span class="text-white text-xl font-serif">Greenify</span>
        </div>

        {# Headers #}
        <h1 class="text-2xl font-medium text-center mb-2">Bienvenue</h1>
        <h2 class="text-xl text-[#3B4419] text-center mb-8">Créer votre compte</h2>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {
            'attr': {
                'class': 'space-y-4'
            }
        }) }}

            {# Nom #}
            {{ form_widget(registrationForm.nom, {
                'attr': {
                    'class': 'w-full bg-transparent border border-gray-300 rounded-lg h-12 px-4 focus:outline-none focus:ring-2 focus:ring-[#3B4419]',
                    'placeholder': 'Nom'
                }
            }) }}
            {{ form_errors(registrationForm.nom) }}

            {# Prénom #}
            {{ form_widget(registrationForm.prenom, {
                'attr': {
                    'class': 'w-full bg-transparent border border-gray-300 rounded-lg h-12 px-4 focus:outline-none focus:ring-2 focus:ring-[#3B4419]',
                    'placeholder': 'Prénom'
                }
            }) }}
            {{ form_errors(registrationForm.prenom) }}

            {# Email #}
            {{ form_widget(registrationForm.email, {
                'attr': {
                    'class': 'w-full bg-transparent border border-gray-300 rounded-lg h-12 px-4 focus:outline-none focus:ring-2 focus:ring-[#3B4419]',
                    'placeholder': 'Adresse mail'
                }
            }) }}
            {{ form_errors(registrationForm.email) }}

            {# Password #}
            {{ form_widget(registrationForm.plainPassword, {
                'attr': {
                    'class': 'w-full bg-transparent border border-gray-300 rounded-lg h-12 px-4 focus:outline-none focus:ring-2 focus:ring-[#3B4419]',
                    'placeholder': 'Mot de passe'
                }
            }) }}
            {{ form_errors(registrationForm.plainPassword) }}

            {# Terms checkbox - hidden but maintained for functionality #}
            <div class="hidden">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="w-full bg-[#3B4419] hover:bg-[#2A3112] text-white h-12 rounded-lg font-medium transition-colors duration-200">
                S'inscrire
            </button>
        {{ form_end(registrationForm) }}

        {# Login Link #}
        <div class="mt-6 text-sm text-center">
            Déjà inscrit ?
            <a href="{{ path('app_login') }}" class="text-[#3B4419] hover:underline">
                Connectez-vous
            </a>
        </div>

        {# Bottom Bar Indicator #}
    </div>
</div>
{% endblock %}