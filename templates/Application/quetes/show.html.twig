{% extends 'base.html.twig' %}

{% block title %}Quetes{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 flex flex-col justify-center items-center">
    <div class="bg-white shadow-md rounded-lg p-8 max-w-4xl w-full">
        <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Quetes</h1>

        <table class="table-auto w-full mb-6">
            <tbody>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left text-gray-600">Id</th>
                    <td class="px-4 py-2">{{ quete.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left text-gray-600">Titre</th>
                    <td class="px-4 py-2">{{ quete.titre }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left text-gray-600">Description</th>
                    <td class="px-4 py-2">{{ quete.description }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left text-gray-600">Etat</th>
                    <td class="px-4 py-2">{{ quete.etat }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left text-gray-600">TitreQuestion</th>
                    <td class="px-4 py-2">{{ quete.titreQuestion }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left text-gray-600">Xp</th>
                    <td class="px-4 py-2">{{ quete.xp }}</td>
                </tr>
                {% for r in reponses %}
                    <tr class="border-b">
                        <th class="px-4 py-2 text-left text-gray-600">Reponse1</th>
                        <td class="px-4 py-2">{{ r.titre }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="px-4 py-2 text-left text-gray-600">Bonne reponse</th>
                        <td class="px-4 py-2">{{ r.isGoodQuestion ? 'Oui' : 'Non' }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="flex justify-between">
            <a href="{{ path('app_application_quetes_index') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Back to list</a>
            <a href="{{ path('app_application_quetes_edit', {'id': quete.id}) }}" class="bg-yellow-500 text-white py-2 px-4 rounded hover:bg-yellow-700">Edit</a>
        </div>

        <div class="mt-4">
            {{ include('application/quetes/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}