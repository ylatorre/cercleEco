{% extends 'base.html.twig' %}

{% block title %}Quetes{% endblock %}

{% block body %}
<div class="flex min-h-screen bg-[#B8BC86]">
    {# Sidebar #}
    <aside class="w-64 bg-[#3B4419] text-white p-6">
        <div class="mb-12">
            <img src="{{ asset('image/logo.png') }}" alt="Greenify Logo" class="inline-block" style="height: 8rem;">
        </div>
        <nav class="space-y-4">
            <a href="{{ path('app_application_quetes_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">
                Gestion des Quêtes
            </a>
            <a href="{{ path('app_application_dons_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">
                Gestion des Dons
            </a>
            <a href="{{ path('app_application_user_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">
                Gestion des Utilisateurs
            </a>
        </nav>
    </aside>

    {# Main Content #}
    <main class="flex-1 p-8">
        <div class="mb-8">
            <h1 class="text-4xl font-serif text-[#3B4419] mb-8">Quêtes</h1>
            <div class="bg-[#3B4419] rounded-2xl overflow-hidden p-8">
                <div class="flex justify-between">
                    <a href="{{ path('app_application_quetes_index') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Retour</a> 
                    <a href="{{ path('app_application_quetes_edit', {'id': quete.id}) }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700]">Modifier</a> 
                </div>
                <table class="table-auto w-full mb-6">
                    <tbody>
                        <tr class="border-b border-[#4B5429]">
                            <th class="px-4 py-2 text-left text-white">Id</th>
                            <td class="px-4 py-2 text-white">{{ quete.id }}</td>
                        </tr>
                        <tr class="border-b border-[#4B5429]">
                            <th class="px-4 py-2 text-left text-white">Titre</th>
                            <td class="px-4 py-2 text-white">{{ quete.description|length > 70 ? quete.description|slice(0, 70) ~ '...' : quete.description }}</td>
                        </tr>
                        <tr class="border-b border-[#4B5429]">
                            <th class="px-4 py-2 text-left text-white">Description</th>
                            <td class="px-4 py-2 text-white">{{ quete.description|length > 70 ? quete.description|slice(0, 70) ~ '...' : quete.description }}</td>
                        </tr>
                        <tr class="border-b border-[#4B5429]">
                            <th class="px-4 py-2 text-left text-white">Etat</th>
                            <td class="px-4 py-2 text-white">{{ quete.etat }}</td>
                        </tr>
                        <tr class="border-b border-[#4B5429]">
                            <th class="px-4 py-2 text-left text-white">TitreQuestion</th>
                            <td class="px-4 py-2 text-white">{{ quete.titreQuestion|length > 70 ? quete.titreQuestion|slice(0, 70) ~ '...' : quete.titreQuestion }}</td>
                        </tr>
                        <tr class="border-b border-[#4B5429]">
                            <th class="px-4 py-2 text-left text-white">Xp</th>
                            <td class="px-4 py-2 text-white">{{ quete.xp }}</td>
                        </tr>
                        {% for k,r in reponses %}
                            <tr class="border-b border-[#4B5429]">
                                <th class="px-4 py-2 text-left text-white">Reponse {{k +1}}</th>
                                <td class="px-4 py-2 text-white">{{ r.titre|length > 70 ? r.titre|slice(0, 70) ~ '...' : r.titre }}</td>
                            </tr>
                            <tr class="border-b border-[#4B5429]">
                                <th class="px-4 py-2 text-left text-white">Bonne reponse</th>
                                <td class="px-4 py-2 text-white">{{ r.isGoodQuestion ? 'Oui' : 'Non' }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="mt-4">
                    {{ include('Application/quetes/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}