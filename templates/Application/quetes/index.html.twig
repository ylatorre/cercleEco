{% extends 'base.html.twig' %}

{% block title %}Quetes index{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 flex flex-col justify-center items-center">
    <div class="bg-white shadow-md rounded-lg p-8 max-w-4xl w-full">
        <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Quetes index</h1>

        <div class="mb-4">
            <a href="{{ path('app_admin_index') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Retour</a>
        </div>
        <table class="min-w-full bg-white">
            <thead>
                <tr>
                    <th class="py-2 px-4 bg-gray-200 text-gray-600 font-bold uppercase text-sm text-left">Id</th>
                    <th class="py-2 px-4 bg-gray-200 text-gray-600 font-bold uppercase text-sm text-left">Titre</th>
                    <th class="py-2 px-4 bg-gray-200 text-gray-600 font-bold uppercase text-sm text-left">Description</th>
                    <th class="py-2 px-4 bg-gray-200 text-gray-600 font-bold uppercase text-sm text-left">Etat</th>
                    <th class="py-2 px-4 bg-gray-200 text-gray-600 font-bold uppercase text-sm text-left">TitreQuestion</th>
                    <th class="py-2 px-4 bg-gray-200 text-gray-600 font-bold uppercase text-sm text-left">Xp</th>
                    <th class="py-2 px-4 bg-gray-200 text-gray-600 font-bold uppercase text-sm text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for quete in quetes %}
                <tr class="border-b">
                    <td class="py-2 px-4">{{ quete.id }}</td>
                    <td class="py-2 px-4">{{ quete.titre }}</td>
                    <td class="py-2 px-4">{{ quete.description }}</td>
                    <td class="py-2 px-4">{{ quete.etat }}</td>
                    <td class="py-2 px-4">{{ quete.titreQuestion }}</td>
                    <td class="py-2 px-4">{{ quete.xp }}</td>
                    <td class="py-2 px-4">
                        <a href="{{ path('app_application_quetes_show', {'id': quete.id}) }}" class="text-blue-500 hover:underline"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('app_application_quetes_edit', {'id': quete.id}) }}" class="text-blue-500 hover:underline ml-2"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="py-2 px-4 text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="mt-4">
            <a href="{{ path('app_application_quetes_new') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700"><i class="fas fa-plus"></i></a>
        </div>
    </div>
</div>
{% endblock %}