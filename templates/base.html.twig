<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </head>
    {# templates/components/header.html.twig #}
<header class="bg-[#3B4419] px-6 py-4">
    <div class="max-w-7xl mx-auto flex items-center justify-between">
        <a href="{{ path('app_front') }}" class="text-2xl font-serif text-white">
            Greenify
        </a>

        <nav class="hidden md:flex items-center space-x-8">
            <a href="{{ path('app_front') }}" class="text-white hover:text-[#B8BC86] transition-colors">Accueil</a>
            <a href="{{ path('app_dons') }}" class="text-white hover:text-[#B8BC86] transition-colors">Dons</a>
            <a href="{{ path('app_quetes') }}" class="text-white hover:text-[#B8BC86] transition-colors">Quêtes</a>
            <a href="{{ path('app_actualites') }}" class="text-white hover:text-[#B8BC86] transition-colors">Actualités</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_admin_index') }}" class="text-white hover:text-[#B8BC86] transition-colors">Administration</a>
            {% endif %}
        </nav>

             
        <div class="flex items-center space-x-4">
    <a href="{{ path('app_login') }}" class="border border-white rounded-full px-4 py-2 text-white hover:bg-white hover:text-[#3B4419] transition-colors flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
    </a>

    <a href="{{path('app_chatAi')}}" class="border border-white rounded-full px-4 py-2 text-white hover:bg-white hover:text-[#3B4419] transition-colors flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8a9 9 0 100-18 9 9 0 000 18z" />
        </svg>
    </a>

</div>
 
</header>
    <body>
        {% block body %}{% endblock %}
   
    </body>


{# templates/components/_footer.html.twig #}
<footer class="bg-[#2E3105] text-white px-6 py-12">
    <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-8">
        {# Logo Section #}
        <div class="space-y-4">
            <div class="text-2xl font-serif text-[#B8BC86]">Greenify</div>
            <img src="{{ asset('image/logo.png') }}" alt="Greenify Leaf" class="w-16 h-16">
        </div>

        {# Legal Information #}
        <div class="space-y-4">
            <h3 class="text-xl text-[#B8BC86] font-serif">Informations légal</h3>
            <div class="space-y-2">
                <a href="{{ path('app_front') }}" class="block hover:text-[#B8BC86] transition-colors">
                    Conditions générale d'utilisation
                </a>
                <a href="{{ path('app_front') }}" class="block hover:text-[#B8BC86] transition-colors">
                    RGPD
                </a>
            </div>
        </div>

        {# Contact Section #}
        <div class="space-y-4">
            <h3 class="text-xl text-[#B8BC86] font-serif">Contact</h3>
            <a href="mailto:contact@greenify.com" class="block hover:text-[#B8BC86] transition-colors">
                Envoyez nous un e-mail
            </a>
            <div class="flex space-x-4">
                <a href="#" class="hover:text-[#B8BC86] transition-colors">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
