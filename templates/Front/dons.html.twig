{% extends 'base.html.twig' %}

{% block title %}Greenify - Accueil{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#3B4419]">
    {# Navigation #}
    <nav class="px-6 py-4">
        <div class="max-w-7xl mx-auto flex items-center justify-between">
            <a href="{{ path('app_front') }}" class="text-2xl font-serif text-white">
                Greenify
            </a>

                
        <div class="flex items-center space-x-4">
    <a href="{{ path('app_login') }}" class="border border-white rounded-full px-4 py-2 text-white hover:bg-white hover:text-[#3B4419] transition-colors flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
    </a>

    <a href="#chat-ai" class="border border-white rounded-full px-4 py-2 text-white hover:bg-white hover:text-[#3B4419] transition-colors flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8a9 9 0 100-18 9 9 0 000 18z" />
        </svg>
    </a>

</div>
    </nav>

  {# Section de filtre #}
    <div class="max-w-7xl mx-auto px-6 py-6 flex justify-end">
        <button class="flex items-center space-x-2 bg-[#DFE777] text-[#3B4419] px-4 py-2 rounded-full hover:bg-[#B8BC86] transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 000 2h18a1 1 0 100-2H3zm0 6a1 1 0 100 2h18a1 1 0 100-2H3zm0 6a1 1 0 000 2h18a1 1 0 100-2H3z" />
            </svg>
            <span>Filtrer les produits</span>
        </button>
    </div>

    {# Section principale pour les dons #}
    <div class="max-w-7xl mx-auto px-6 py-10">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {% for d in dons %}
                <div class="bg-[#DFE777] p-6 rounded-lg flex flex-col items-center text-center text-[#3B4419]">
                    {% if d.image %}
                        <img src="{{ asset('image/dons/' ~ d.image) }}" alt="{{ d.titre }}" class="w-full h-48 object-cover mb-4 rounded-lg">
                    {% endif %}
                    <h2 class="text-2xl font-serif mb-4">{{ d.titre }}</h2>
                    <p class="text-gray-700 mb-4">{{ d.description }}</p>
                    <p class="text-gray-600 mb-4">Emplacement : </p> {# {{ d.emplacement }} #}
                    <a href="#" class="border border-[#3B4419] text-[#3B4419] rounded-full px-6 py-2 hover:bg-[#3B4419] hover:text-white transition-colors">
                        Réserver
                    </a>
                </div>
            {% else %}
                <p class="text-center col-span-full text-gray-300">Aucun objet disponible pour le moment.</p>
            {% endfor %}
            
            {# Produits supplémentaires - Exemple #}
            <div class="bg-[#DFE777] p-6 rounded-lg flex flex-col items-center text-center text-[#3B4419]">
                <img src="/path/to/image1.jpg" alt="Objet 1" class="w-full h-48 object-cover mb-4 rounded-lg">
                <h2 class="text-2xl font-serif mb-4">Chaise en bois</h2>
                <p class="text-gray-700 mb-4">Chaise en bon état, idéale pour les étudiants.</p>
                <p class="text-gray-600 mb-4">Emplacement : Campus Nord</p>
                <a href="#" class="border border-[#3B4419] text-[#3B4419] rounded-full px-6 py-2 hover:bg-[#3B4419] hover:text-white transition-colors">
                    Réserver
                </a>
            </div>

            <div class="bg-[#DFE777] p-6 rounded-lg flex flex-col items-center text-center text-[#3B4419]">
                <img src="/path/to/image2.jpg" alt="Objet 2" class="w-full h-48 object-cover mb-4 rounded-lg">
                <h2 class="text-2xl font-serif mb-4">Table basse</h2>
                <p class="text-gray-700 mb-4">Table basse minimaliste pour le salon.</p>
                <p class="text-gray-600 mb-4">Emplacement : Campus Sud</p>
                <a href="#" class="border border-[#3B4419] text-[#3B4419] rounded-full px-6 py-2 hover:bg-[#3B4419] hover:text-white transition-colors">
                    Réserver
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
