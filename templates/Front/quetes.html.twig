{% extends 'base.html.twig' %}

{% block title %}Quêtes disponibles{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#B8BC86]">
    {# {/* Main Content */} #}
    <main class="max-w-7xl mx-auto px-6 py-8">
        {# {/* Level Bar */} #}
        <div class="bg-[#3B4419] rounded-full p-4 mb-8 flex items-center justify-between">
            <div class="text-white">Niveau 69</div>
            <div class="flex items-center space-x-4">
                <div class="text-white">12345 / 17000 XP</div>
                <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" />
                </svg>
            </div>
        </div>

        <h1 class="text-4xl font-serif text-[#3B4419]  mb-8">Quêtes disponibles</h1>

        <section class="mb-12">
            <h2 class="text-2xl font-serif text-white mb-6">Quêtes quotidiennes</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {% for quest in quests %}
                    <div class="bg-[#D5E1A3] rounded-lg p-6 flex flex-col">
                        <h3 class="text-xl font-bold mb-4">{ quest.titre }</h3>
                        <p class="text-sm mb-6 flex-grow">{ quest.description }</p>
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center">
                                <svg class="w-6 h-6 mr-2" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M20 6h-2.18c.11-.31.18-.65.18-1a2.996 2.996 0 0 0-5.5-1.65l-.5.67-.5-.68C10.96 2.54 10.05 2 9 2 7.34 2 6 3.34 6 5c0 .35.07.69.18 1H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-5-2c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM9 4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm11 15H4v-2h16v2zm0-5H4V8h5.08L7 10.83 8.62 12 11 8.76l1-1.36 1 1.36L15.38 12 17 10.83 14.92 8H20v6z"/>
                                </svg>
                                <span>{ quest.xp } XP</span>
                            </div>
                        </div>
                        <a href="{{ path('app_application_quests_show', {'id': quest.id}) }}" 
                           class="block text-center py-2 px-4 rounded-full border border-[#3B4419] text-[#3B4419] hover:bg-[#3B4419] hover:text-white transition-colors">
                            Accéder à la quête
                        </a>
                    </div>
                {% endfor %}
            </div>
        </section>

        {# {/* Blocked Quests Section */} #}
        <section>
            <h2 class="text-2xl font-serif text-white mb-6">Quêtes bloquante</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {% for quest in quests %}
                    <div class="bg-[#D5E1A3] rounded-lg p-6 flex flex-col">
                        <h3 class="text-xl font-bold mb-4">{ quest.titre }</h3>
                        <p class="text-sm mb-6 flex-grow">{ quest.description }</p>
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center">
                                <svg class="w-6 h-6 mr-2" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M20 6h-2.18c.11-.31.18-.65.18-1a2.996 2.996 0 0 0-5.5-1.65l-.5.67-.5-.68C10.96 2.54 10.05 2 9 2 7.34 2 6 3.34 6 5c0 .35.07.69.18 1H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-5-2c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM9 4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm11 15H4v-2h16v2zm0-5H4V8h5.08L7 10.83 8.62 12 11 8.76l1-1.36 1 1.36L15.38 12 17 10.83 14.92 8H20v6z"/>
                                </svg>
                                <span>{ quest.xp } XP</span>
                            </div>
                        </div>
                        <a href="{{ path('app_application_quests_show', {'id': quest.id}) }}" 
                           class="block text-center py-2 px-4 rounded-full border border-[#3B4419] text-[#3B4419] hover:bg-[#3B4419] hover:text-white transition-colors">
                            Accéder à la quête
                        </a>
                    </div>
                {% endfor %}
            </div>
        </section>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="mt-8 flex justify-end">
                <a href="{{ path('app_application_quests_new') }}" 
                   class="inline-flex items-center justify-center rounded-full bg-[#3B4419] px-4 py-2 text-white hover:bg-[#4B5429] transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Nouvelle quête
                </a>
            </div>
        {% endif %}
    </main>
</div>
{% endblock %}