{% extends 'base.html.twig' %}

{% block title %}New Dons{% endblock %}

{% block body %}
<form method="post" enctype="multipart/form-data">
    <div class="flex min-h-screen bg-[#B8BC86]">
        {# {/* Sidebar */}
        <aside class="w-64 bg-[#3B4419] text-white p-6">
            <div class="mb-12">
                <img src="{{ asset('image/logo.png') }}" alt="Greenify Logo" class="inline-block" style="height: 8rem;">
            </div>
            <nav class="space-y-4">
                <a href="{{ path('app_application_quests_index') }}" class="block py-2 px-4 rounded hover:bg-[#4B5429] transition-colors">
