{% extends 'base.html.twig' %}

{% block title %}Greenify - Accueil{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#3B4419]">
    <div class="max-w-7xl mx-auto px-6 py-10">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-[#DFE777] p-6 rounded-lg flex flex-col items-center text-center text-[#3B4419]">
                {% if don.image %}
                    <img src="{{ asset('image/dons/' ~ don.image) }}" alt="{{ don.titre }}" class="w-full h-48 object-cover mb-4 rounded-lg">
                {% endif %}
                <h2 class="text-2xl font-serif mb-4">{{ don.titre }}</h2>
                <p class="text-gray-700 mb-4">{{ don.description }}</p>
                <p class="text-gray-600 mb-4">Emplacement : {{ don.localisation ? don.localisation : 'Non spécifié' }}</p>   
            </div>
        </div>
    </div>
</div>
{% endblock %}
