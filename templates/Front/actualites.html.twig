{% extends 'base.html.twig' %}

{% block title %}Actualités écologiques{% endblock %}

{% block body %}
    <div class="min-h-screen bg-[#3B4419]">
        <div class="max-w-7xl mx-auto px-6 py-20">
            <h1 class="text-5xl md:text-7xl text-white font-serif text-center leading-tight mb-20">
                Dernières Actualités
            </h1>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {% for item in rss_feed() %}
                    <div class="bg-[#DFE777] p-8 rounded-lg flex flex-col items-center text-center">
                        <h2 class="text-2xl font-serif mb-6">{{ item.title }}</h2>
                        <p class="text-gray-700 mb-8">{{ item.description }}</p>
                        <a href="{{ item.link }}" class="border border-[#3B4419] text-[#3B4419] rounded-full px-6 py-2 hover:bg-[#3B4419] hover:text-white transition-colors">
                            Lire plus
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
